<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"
        android:id="@+id/line"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/start_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/book"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Books"
        android:id="@+id/title_reklama"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/start_margin"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_marginEnd="@dimen/start_margin"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Books Description"
        android:id="@+id/description_reklama"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_marginEnd="@dimen/start_margin"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/title_reklama"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reklama"
            android:id="@+id/reklama"
            app:layout_constraintTop_toBottomOf="@+id/description_reklama"
            app:layout_constraintStart_toStartOf="@+id/line"
            android:layout_marginStart="@dimen/start_margin"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/line"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="dounload"
            app:layout_constraintTop_toBottomOf="@+id/reklama"
            android:background="@android:color/holo_red_light"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/start_margin"
            android:layout_marginEnd="@dimen/start_margin"
            android:id="@+id/btnReklama"
            />

</androidx.constraintlayout.widget.ConstraintLayout>